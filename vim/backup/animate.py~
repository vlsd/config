import numpy as np
import matplotlib.pyplot as plt
import matplotlib.animation as animation

from sin2d import *

def animate(i):
    l.set_data([q(P(z(x[i])))[0], q(P(z(x[i+1])))[0]], [q(P(z(x[i])))[1], q(P(z(x[i+1])))[1]])
    return l

fig = plt.figure()

l, = plt.plot([], [], 'r-')
plt.xlim(0, 35)
plt.ylim(0, 15)
#plt.xlabel('x')
#plt.title('test')
line_ani = animation.FuncAnimation(fig, animate) # , np.arange(1, len(x)), interval=50, blit=True)
#line_ani.save('lines.mp4')

plt.show()
